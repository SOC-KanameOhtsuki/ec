{% block main %}
<!--検索条件設定テーブルここまで-->
{% if pagination %}
<div id="result_list" class="row">
  <div class="col-md-12">
    <div id="result_list_main" class="box">
      {% if pagination and pagination.totalItemCount > 0 %}
      <div id="result_list_main__header" class="box-header with-arrow">
        <h2><a href="{{ url('admin_training_edit', { id : Product.id }) }}">{{ Product.name }}(会場：{{ Product.ProductTraining.place }})</a></h2>
       <!--講習会情報表示-->
        <table class="table table-bordered ">
            <thead>
                <tr class="bg-primary" >
                    <th scope="cal">開催日</th><th scope="cal">地域</th><th scope="cal">講習会種別</th><th scope="cal">申込数 / 定員数</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ ProductTrainingStart[0] }}</td><td>{{ ProductTrainingAddr }}</td><td> {{ Product.ProductTraining.training_type }} </td>
                    {% if ProductClassStock == "" %}
                        <td>{{ pagination.totalItemCount }} / 無制限</td>
                    {% else %}
                        <td>{{ pagination.totalItemCount }} / {{ ProductClassStock }}</td>
                    {% endif %}
                </tr>
            </tbody>
        </table>
        <h3 class="box-title">検索結果 <span class="normal"><strong>{{ pagination.totalItemCount }} 件</strong> が該当しました</span></h3>
      <!--受講者情報-->
      </div><!-- /.box-header -->
      <div id="result_list_main__body" class="box-body">
        <div id="customInfoAlert" class="alert alert-info" style="display: none;">
        </div>
        <div id="customAlert" class="alert alert-warning" style="display: none;">
        </div>
        <!--個別/一括プルダウン作成-->
        <div id="result_list_main__menu" class="row">
          <div class="col-md-12">
            <ul class="sort-dd">
              <li id="result_list_main__pagemax_menu" class="dropdown">
                {% for pageMax in pageMaxis if pageMax.name == page_count %}
                  <a class="dropdown-toggle" data-toggle="dropdown">{{ pageMax.name|e }}件<svg class="cb cb-angle-down icon_down"><use xlink:href="#cb-angle-down"></svg></a>
                  <ul class="dropdown-menu">
                {% endfor %}
                  {% for pageMax in pageMaxis if pageMax.name != page_count %}
                    <li><a href="{{ path('admin_student_page', {'id': ProductId, 'page_no': 1, 'page_count': pageMax.name}) }}">{{ pageMax.name|e }}件</a></li>
                  {% endfor %}
                  </ul>
              </li>
              <!--個別実行プルダウン-->
              <li id="result_list_main__all_output_menu" class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown">各種個別実行<svg class="cb cb-angle-down icon_down"><use xlink:href="#cb-angle-down"></svg></a>
              <ul class="dropdown-menu">
                <li><a id="mail_accept" href="javascript:void(0);">講習申込返信（郵便）</a></li>
                <li><a id="fax_accept" href="javascript:void(0);">講習申込返信（FAX）</a></li>
                {% if ProductTraining.TrainingType.id == 5 %}
                    <li><a id="name_tag" href="javascript:void(0);">講演会名札</a></li>
                {% else %}
                    <li><a id="name_tag_for_tarining" href="javascript:void(0);">名札</a></li>
                {% endif %}
                <li><a id="mail_label_select_with_id" href="javascript:void(0);">郵送用ラベル(希望送付先/IDあり)</a></li>
                <li><a id="mail_label_select" href="javascript:void(0);">郵送用ラベル(希望送付先/IDなし)</a></li>
                <li><a id="mail_label_home_with_id" href="javascript:void(0);">郵送ラベル(自宅/IDあり)</a></li>
                <li><a id="mail_label_home" href="javascript:void(0);">郵送用ラベル</a></li>
                <li><a id="mail_label_company_with_id" href="javascript:void(0);">郵送用ラベル(勤務先/IDあり)</a></li>
                <li><a id="mail_label_company" href="javascript:void(0);">郵送用ラベル(勤務先/IDなし)</a></li>
                {% if ProductTraining.TrainingType.QualificationType.id == 2 %}
                    <li><a id="certification_sendding_note" href="javascript:void(0);">資格認定証送付状</a></li>
                {% endif %}
