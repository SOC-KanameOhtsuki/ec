{% extends 'default_frame.twig' %}

{% set menus = ['training', 'training_type', 'training_type_edit'] %}

{% block title %}受講管理／種別マスタ{% endblock %}
{% block sub_title %}マスタ編集{% endblock %}

{% form_theme form 'Form/bootstrap_3_horizontal_layout.html.twig' %}

{% block stylesheet %}
<link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/themes/smoothness/jquery-ui.css">
{% endblock stylesheet %}

{% block javascript %}
<script src="{{ app.config.admin_urlpath }}/assets/js/vendor/fileupload/vendor/jquery.ui.widget.js"></script>
<script src="{{ app.config.admin_urlpath }}/assets/js/vendor/fileupload/jquery.iframe-transport.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>
<script>
$(function() {
    $("#admin_training_type_qualification_type").change(function() {
        $("#admin_training_type_qualification").val(-1);
        $("#admin_training_type_qualification").children().remove();
        var val = $(this).val();
        if (val == 2) {
            $("#admin_training_type_qualification").prop('disabled', false);
        } else if (val == 3) {
            $("#admin_training_type_qualification").prop('disabled', false);
        } else {
            $("#admin_training_type_qualification").prop('disabled', true);
        }
    });
});
</script>
{% endblock javascript %}

{% block main %}
        <div class="row" id="aside_wrap">
            <form role="form" name="form1" id="form1" method="post" action="" novalidate enctype="multipart/form-data">
            {{ form_widget(form._token) }}
                <div id="detail_wrap" class="col-md-12">
                    <div id="type_info_box" class="box form-horizontal">
                        <div id="type_info_box__header" class="box-header toggle">
                            <h3 class="box-title">講習/研修/講演会種別</h3>
                        </div><!-- /.box-header -->
                        <div id="type_info_box__body" class="box-body">
                            {# 講習/研修/講演会種別名称 #}
                            <div id="type_info_box__name" class="form-group">
                                <div class="col-sm-3 col-lg-2">講習/研修/講演会種別名称</div>
                                <div id="detail_box__name" class="col-sm-6">
                                    {{ form_widget(form.name) }}
                                    {{ form_errors(form.name) }}
                                </div>
                            </div>
                            {# 認定資格種別 #}
                            <div id="type_info_box__name" class="form-group">
                                <div class="col-sm-3 col-lg-2">認定資格種別</div>
                                <div id="detail_box__name" class="col-sm-6">
                                    {{ form_widget(form.qualification_type) }}
                                    {{ form_errors(form.qualification_type) }}
                                </div>
                            </div>
                            {# 認定資格 #}
                            <div id="type_info_box__name" class="form-group">
                                <div class="col-sm-3 col-lg-2">認定資格</div>
                                <div id="detail_box__name" class="col-sm-6">
                                    {{ form_widget(form.qualification) }}
                                    {{ form_errors(form.qualification) }}
                                </div>
                            </div>
                            {# 表示順 #}
                            <div id="type_info_box__rank" class="form-group">
                                <div class="col-sm-3 col-lg-2">表示順</div>
                                <div id="detail_box__rank" class="col-sm-3 col-lg-3">
                                    {{ form_widget(form.rank) }}
                                    {{ form_errors(form.rank) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="detail__insert_button" class="row btn_area">
                        <p class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-4 text-center">
                            <button type="submit" class="btn btn-primary btn-block btn-lg" name="mode" value="register">種別情報を登録</button>
                        </p>
                        <!-- /.col -->
                    </div>
                    <div id="detail_box__footer" class="row hidden-xs hidden-sm">
                        <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 text-center btn_area">
                            <p><a href="{{ url('admin_training_type_page', { page_no : app.session.get('eccube.admin.training_type.search.page_no')|default('1') } ) }}?resume=1">検索画面に戻る</a></p>
                        </div>
                    </div>
                </div><!-- /.col -->
            </form>
        </div>

{% endblock %}
